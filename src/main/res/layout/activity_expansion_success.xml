<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/admissionsuccess_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="请耐心等待审核"
        android:textColor="@color/black"
        android:textSize="33sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admissionsuccess_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="感谢您的申请"
        android:textColor="@color/black"
        android:textSize="33sp" />


    <Button
        android:id="@+id/expansionsuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admissionsuccess_tv"
        android:layout_margin="55dp"
        android:background="@drawable/login_btn_bg"
        android:padding="22sp"
        android:text="查看审核状态"
        android:textColor="@drawable/login_btn_text"
        android:textSize="20sp" />


</RelativeLayout>