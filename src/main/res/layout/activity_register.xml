<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/title_im" />

        <ImageView
            android:layout_width="@dimen/login_logo"
            android:layout_height="@dimen/login_logo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:background="@mipmap/logo" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_marginlr"
        android:paddingRight="@dimen/login_marginlr">

        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:hint="请输入你的姓名"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:hint="请输入你的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_code"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="@color/blueSky"
                android:textSize="16sp" />

            <ImageView style="@style/iv_height" />

            <TextView
                android:id="@+id/register_codetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:text="获取验证码"
                android:textColor="@drawable/login_text_color"
                android:textSize="16sp" />

        </LinearLayout>


        <EditText
            android:id="@+id/register_pwd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_again"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:background="@drawable/input_bg"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />


        <Button
            android:id="@+id/register_confirm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="44dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_bg"
            android:text="确认信息，提交认证"
            android:textColor="@drawable/login_btn_text"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>