<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tt_height">

        <ImageView
            android:id="@+id/back_expansionapply"
            style="@style/tt_iv" />

        <TextView
            style="@style/tt_tv"
            android:layout_toRightOf="@id/back_expansionapply"
            android:text="申请扩租" />
    </RelativeLayout>


    <TextView
        android:id="@+id/expansion_name"
        style="@style/admissionapply_tv"
        android:text="企业名称" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/expansion_timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="入住时间"
            android:paddingLeft="11dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/expansion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="22dp"
            android:src="@mipmap/calendar" />

    </RelativeLayout>

    <TextView
        android:id="@+id/expansion_user"
        style="@style/admissionapply_tv"
        android:layout_marginTop="9dp"
        android:text="姓名" />

    <TextView
        android:id="@+id/expansion_phone"
        style="@style/admissionapply_tv"
        android:layout_marginTop="9dp"
        android:inputType="phone"
        android:maxLength="11"
        android:text="电话" />

    <TextView
        android:id="@+id/expansion_email"
        style="@style/admissionapply_tv"
        android:layout_marginTop="9dp"
        android:text="邮箱" />

    <TextView
        android:id="@+id/expansion_typearea"
        style="@style/admissionapply_tv"
        android:layout_marginTop="9dp"
        android:text="现工位类型及面积" />

    <EditText
        android:id="@+id/expansion_area"
        style="@style/admissionapply_tv"
        android:layout_marginTop="9dp"
        android:hint="申请扩租面积"
        android:inputType="number" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/admissionapply_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="22dp"
            android:background="@drawable/login_btn_bg"
            android:text="确认并提交"
            android:textColor="@drawable/login_btn_text"
            android:textSize="20sp" />
    </RelativeLayout>


</LinearLayout>