<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/main_layout"
        android:layout_weight="1"
        android:paddingBottom="11dp">

        <com.bs.utown.view.RoundImageView
            android:id="@+id/ut_head"
            android:layout_width="@dimen/main_RI"
            android:layout_height="@dimen/main_RI"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="优唐智慧园"
            android:textColor="@color/black"
            android:textSize="28dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:src="@mipmap/main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/ut_code"
            android:layout_width="@dimen/oval"
            android:layout_height="@dimen/oval"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ovalmargin"
            android:background="@drawable/oval"
            android:scaleType="centerInside"
            android:src="@mipmap/utcode" />

        <ImageView
            android:id="@+id/ut_server"
            android:layout_width="@dimen/oval"
            android:layout_height="@dimen/oval"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ovalmargin"
            android:background="@drawable/oval"
            android:scaleType="centerInside"
            android:src="@mipmap/utserver" />

    </RelativeLayout>


</LinearLayout>