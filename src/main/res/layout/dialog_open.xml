<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/open_iv"
        android:layout_width="@dimen/open"
        android:layout_height="@dimen/open"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/open_tvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="请将你的门禁二维码对准设备"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/open_tvs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="二维码每次使用即时生效,有效期限5分钟为了您的安全,请不要将二维码发给其他人" />


</LinearLayout>