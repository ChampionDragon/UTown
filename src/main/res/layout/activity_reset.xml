<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.bs.utown.view.RoundImageView
            android:layout_width="@dimen/login_logo"
            android:layout_height="@dimen/login_logo"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_marginlr"
        android:paddingRight="@dimen/login_marginlr">

        <EditText
            android:background="@null"
            android:id="@+id/reset_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/blueSky"
            android:textSize="16sp" />

        <ImageView
            style="@style/iv"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reset_code"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:textColor="@color/blueSky"
                android:textSize="16sp" />

            <ImageView style="@style/iv_height" />

            <TextView
                android:id="@+id/reset_codetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:text="获取验证码"
                android:textColor="@drawable/login_text_color"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            style="@style/iv"
            android:layout_marginBottom="16dp" />


        <Button
            android:id="@+id/reset_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/login_btn_bg"
            android:text="下一步"
            android:textColor="@drawable/login_btn_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/reset_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="返回"
            android:textColor="@drawable/login_text_color"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>