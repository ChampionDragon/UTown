<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tt_height">

        <ImageView
            android:id="@+id/user_back"
            style="@style/tt_iv" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/user_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginRight="22dp"
            android:background="@drawable/next" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_weight="1"
        android:background="@drawable/user_bg"
        android:gravity="center_vertical">

        <com.bs.utown.view.RoundImageView
            android:id="@+id/user_riv"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="@dimen/user_padding"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="11dp"
            android:paddingLeft="11dp"
            android:paddingTop="11dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘子尧"
                android:textColor="@color/black"
                android:textSize="@dimen/user_tvl" />

            <TextView
                android:id="@+id/user_timetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="入驻时间:" />

            <TextView
                android:id="@+id/user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/user_timetv"
                android:layout_marginTop="2dp"
                android:text="固定工位" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/user_timetv"
                android:text="2018年5月" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/user_name"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/user_name"
                android:background="@mipmap/qrcode" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="11dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_apply"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/user_padding"
            android:text="申请记录"
            android:textColor="@color/black"
            android:textSize="@dimen/user_tvl" />

        <ImageView style="@style/iv" />

        <TextView
            android:id="@+id/user_reservation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/user_padding"
            android:text="预定记录"
            android:textColor="@color/black"
            android:textSize="@dimen/user_tvl" />

        <ImageView style="@style/iv" />

        <TextView
            android:id="@+id/user_act"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/user_padding"
            android:text="活动管理"
            android:textColor="@color/black"
            android:textSize="@dimen/user_tvl" />

        <ImageView style="@style/iv" />

        <TextView
            android:id="@+id/user_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/user_padding"
            android:text="车辆管理"
            android:textColor="@color/black"
            android:textSize="@dimen/user_tvl" />

        <ImageView style="@style/iv" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />


</LinearLayout>
