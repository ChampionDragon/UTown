<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Dialog样式 android:Theme.Dialog这个不添加Dialog会有阴影-->
    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 切记一定要设置为透明状态，不然有阴影 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!--高度为1dp的灰色线-->
    <style name="iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <!--宽度为1dp的灰色线-->
    <style name="iv_height">
        <item name="android:layout_margin">11dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line</item>
    </style>


    <!--+++++++++++++++++++++++++++++++++++  mainActivity ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="main_layout">
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--+++++++++++++++++++++++++++++++++++  图标布局 ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="iv_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="iv_vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="iv_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="iv_tv">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <!--+++++++++++++++++++++++++++++++++++  Title标题 ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="tt_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/title_im</item>
    </style>

    <style name="tt_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
    </style>


    <!--+++++++++++++++++++++++++++++++++++  UserMsgActivity ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="usermsg_rl">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="usermsg_tv">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="usermsg_iv">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@mipmap/arrow</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- popwindow的样式 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!--TabLayout的字体大小-->
    <style name="TabTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
    </style>


    <!--+++++++++++++++++++++++++++++++++++  ResndtailActivity  ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="resn_l">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>

    <style name="resn_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/tv</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="resn_tvt">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="resn_rl">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">33dp</item>
        <item name="android:paddingRight">33dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="resn_iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>


    <!--++++++++++++++++++  GridPasswordView的样式  +++++++++++++++++++++++-->
    <style name="GridPasswordView" />

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!--++++++++++++++++++   AdmissionApplyActivity的样式  +++++++++++++++++++++++-->
    <style name="admissionapply_tv">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">11dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="admissionapply_iv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
    </style>
    <!--++++++++++++++++++   AdmissionSubmitActivity的样式  +++++++++++++++++++++++-->
    <style name="admissionsubmit_tv">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--+++++++++++++++++++++++++++++++++++  LifepayActivity ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="lifepay_rl">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--+++++++++++++++++++++++++++++++++++  terms条款及条件 ++++++++++++++++++++++++++++++++++++++++++++ -->
    <style name="terms_tv">
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">18dp</item>
    </style>
    <style name="terms_tvbig">
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">18dp</item>
    </style>

</resources>
